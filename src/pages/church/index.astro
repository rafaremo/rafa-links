  <section class="grid grid-cols-2 md:grid-cols-4 gap-4">
    {
      pages.map((page) => (
        <div>
          <a href={`/church/${page.id}`}>
           
            <h3 class="text-xl">
              {page.child_page.title}
            </h3>
          </a>
        </div>
      ))
